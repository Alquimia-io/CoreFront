{
  "root": true,
  "ignorePatterns": [
    "projects/**/*",
    "**/*.html"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": [
          "tsconfig.json",
          "projects/*/tsconfig.lib.json",
          "projects/*/tsconfig.spec.json"
        ],
        "ecmaVersion": 2020,
        "sourceType": "module"
      },
      "plugins": [
        "@typescript-eslint"
      ],
      "extends": [
        "eslint:recommended"
      ],
      "env": {
        "browser": true,
        "node": true,
        "es6": true
      },
      "rules": {
        "@typescript-eslint/no-unused-vars": "warn",
        "no-unused-vars": "off",
        "no-console": "warn"
      }
    },
    {
      "files": [
        "*.spec.ts"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": [
          "projects/*/tsconfig.spec.json"
        ]
      },
      "plugins": [
        "@typescript-eslint"
      ],
      "extends": [
        "eslint:recommended"
      ],
      "env": {
        "jasmine": true,
        "node": true
      },
      "rules": {
        "@typescript-eslint/no-unused-vars": "off"
      }
    }
  ]
}